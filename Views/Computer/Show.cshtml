@model MvcLabManager.Models.Computer; 

@{
    ViewData["Title"] = $"Computador {Model.Id}";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<hr>
<a asp-controller="Computer" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Atualizar</a><br><br>

<p>
    <b>Id:</b> @Model.Id
</p>
<p>
    <b>Ram:</b> @Model.Ram
</p>
<p>
    <b>Processador:</b> @Model.Processor
</p>

<a asp-controller="Computer" asp-action="Index" class="btn btn-outline-primary">Voltar</a>