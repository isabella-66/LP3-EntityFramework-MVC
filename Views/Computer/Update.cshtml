@model MvcLabManager.Models.Computer; 

@{
    ViewData["Title"] = $"Editar Computador {Model.Id}";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<hr>

<form asp-controller="Computer" asp-action="UpdateData" asp-route-id="@Model.Id" method="post">
    <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label"><b>Id</b></label>
        <div class="col-md-3">
            <input type="number" name="id" id="id" class="form-control-plaintext" value="@Model.Id" disabled>
        </div>
    </div><br>
    
    <div class="form-group row">
        <label for="ram" class="col-sm-2 col-form-label"><b>Ram</b></label>
        <div class="col-md-3">
            <input type="text" name="ram" id="ram" class="form-control" value="@Model.Ram" required>
        </div>
    </div><br>

    <div class="form-group row">
        <label for="processor" class="col-sm-2 col-form-label"><b>Processador</b></label>
        <div class="col-md-3">
            <input type="text" name="processor" id="processor" class="form-control" value="@Model.Processor" required>
        </div>
    </div><br>
    
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-controller="Computer" asp-action="Show" asp-route-id="@Model.Id" class="btn btn-outline-warning">Cancelar</a>
</form>