@model MvcLabManager.Models.Computer; 

@{
    ViewData["Title"] = $"Editar Computador {Model.Id}";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<hr>

<form asp-controller="Computer" asp-action="UpdateData" asp-route-id="@Model.Id" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"><b>Id</b></label>
        <div class="col-md-3">
            <input asp-for="Id" value="@Model.Id" class="form-control-plaintext" disabled>
        </div>
    </div><br>
    
    <div class="form-group row">
        <label asp-for="Ram" class="col-sm-2 col-form-label"><b>Ram</b></label>
        <div class="col-md-3">
            <input asp-for="Ram" value="@Model.Ram" class="form-control" required>
        </div>
    </div><br>

    <div class="form-group row">
        <label asp-for="Processor" class="col-sm-2 col-form-label"><b>Processador</b></label>
        <div class="col-md-3">
            <input asp-for="Processor" value="@Model.Processor" class="form-control" required>
        </div>
    </div><br>
    
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-controller="Computer" asp-action="Show" asp-route-id="@Model.Id" class="btn btn-outline-warning">Cancelar</a>
</form>