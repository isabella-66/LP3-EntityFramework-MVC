@model IEnumerable<MvcLabManager.Models.Computer>; //coleção de enumeráveis computadores

@{
    ViewData["Title"] = "Computadores";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<hr>
<a asp-controller="Computer" asp-action="Create" class="btn btn-primary">Cadastrar</a><br><br>

@if(Model.Count() == 0)
{
    <p>Nenhum computador cadastrado</p>
} 
else
{
    <table class="table table-responsive table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ram</th>
                <th scope="col">Processador</th>
                <th colspan="2" scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var computer in Model)
            {
                <tr>
                    <td scope="row">@computer.Id</td>
                    <td>@computer.Ram</td>
                    <td>@computer.Processor</td>
                    <td>
                        <a asp-controller="Computer" asp-action="Show" asp-route-id="@computer.Id" class="btn btn-primary btn-sm">Ver</a>
                    </td>
                    <td>
                        <a asp-controller="Computer" asp-action="Delete" asp-route-id="@computer.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}