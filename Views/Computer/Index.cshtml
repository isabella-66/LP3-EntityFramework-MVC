@model IEnumerable<MvcLabManager.Models.Computer>; //coleção de enumeráveis computadores

@{
    ViewData["Title"] = "Computadores";
}

<h1>@ViewData["Title"]</h1>
<form action="/Computer/Create"><button class="btn btn-primary">Cadastrar</button></form>
<hr>

@if(Model.Count() == 0)
{
    <p>Nenhum computador cadastrado</p>
} 
else
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ram</th>
                <th>Processador</th>
                <th colspan="2">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var computer in Model)
            {
                <tr>
                    <td>@computer.Id</td>
                    <td>@computer.Ram</td>
                    <td>@computer.Processor</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/Computer/Show/@computer.Id">Ver</a>
                    </td>
                    <td>
                        <form action="/Computer/Delete/@computer.Id"><button class="btn btn-danger btn-sm">Excluir</button></form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}