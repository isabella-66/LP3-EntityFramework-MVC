@model MvcLabManager.Models.Lab; 

@{
    ViewData["Title"] = $"Editar Laboratório";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<hr>

<form asp-controller="Lab" asp-action="UpdateData" asp-route-id="@Model.Id" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"><b>Id</b></label>
        <div class="col-md-3">
            <input asp-for="Id" value="@Model.Id" class="form-control-plaintext" disabled>
        </div>
    </div><br>
    
    <div class="form-group row">
        <label asp-for="Number" class="col-sm-2 col-form-label"><b>Número</b></label>
        <div class="col-md-3">
            <input asp-for="Number" value="@Model.Number" class="form-control" required>
        </div>
    </div><br>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"><b>Nome</b></label>
        <div class="col-md-3">
            <input asp-for="Name" value="@Model.Name" class="form-control" required>
        </div>
    </div><br>

    <div class="form-group row">
        <label asp-for="Block" class="col-sm-2 col-form-label"><b>Bloco</b></label>
        <div class="col-md-3">
            <input asp-for="Block" value="@Model.Block" class="form-control" required>
        </div>
    </div>
    
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-controller="Lab" asp-action="Show" asp-route-id="@Model.Id" class="btn btn-outline-warning">Cancelar</a>
</form>