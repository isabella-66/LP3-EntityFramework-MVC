@model MvcLabManager.Models.Lab; 

@{
    ViewData["Title"] = $"Novo Laboratório";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<hr>

<form asp-controller="Lab" asp-action="Create" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"><b>Id</b></label>
        <div class="col-md-3">
            <input asp-for="Id" class="form-control" required>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div><br>
    
    <div class="form-group row">
        <label asp-for="Number" class="col-sm-2 col-form-label"><b>Número</b></label>
        <div class="col-md-3">
            <input asp-for="Number" class="form-control" required>
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
    </div><br>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"><b>Nome</b></label>
        <div class="col-md-3">
            <input asp-for="Name" class="form-control" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div><br>

    <div class="form-group row">
        <label asp-for="Block" class="col-sm-2 col-form-label"><b>Bloco</b></label>
        <div class="col-md-3">
            <input asp-for="Block" class="form-control" required>
            <span asp-validation-for="Block" class="text-danger"></span>
        </div>
    </div><br>
    
    <button type="submit" class="btn btn-success">Enviar</button>
    <a asp-controller="Lab" asp-action="Index" class="btn btn-outline-warning">Cancelar</a>
</form>